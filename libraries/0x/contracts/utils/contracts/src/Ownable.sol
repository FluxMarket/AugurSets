pragma solidity ^0.4.22;

import "./interfaces/IOwnable.sol";


contract Ownable is
    IOwnable
{
    address public owner;

    function Ownable ()
        public
    {
        owner = msg.sender;
    }

    modifier onlyOwner() {
        require(
            msg.sender == owner,
            "ONLY_CONTRACT_OWNER"
        );
        _;
    }

    function transferOwnership(address newOwner)
        public
        onlyOwner
    {
        if (newOwner != address(0)) {
            owner = newOwner;
        }
    }
}
